<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingDayActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/exerciseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Pull-ups"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseTextView">

        <TextView
            android:id="@+id/row1TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/row2TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/row3TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/row4TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/row5TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:textStyle="bold"></TextView>


    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="info:"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/trainingDayInfoTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/trainingDayInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:text="info:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>